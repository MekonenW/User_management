
<h1>Editing User</h1>
<form action='/users/<%= @user.id%>' method='post'>
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

<label>
	First name: <input type='text' name='user[first_name]' value ='<%= @user.first_name%>'><br>
</label>
<label>
	Last name: <input type='text' name='user[last_name]' value ='<%= @user.last_name%>'><br>
</label>
<label>
	Email : <input type='email' name='user[email]' value ='<%= @user.email%>'><br>

</label>
<label>
	Password: <input type='password' name='user[password]' value ='<%= @user.password%>'><br>

</label>
<input type='submit' value='Update'><br>
</form>

<a href="/">Back</a>